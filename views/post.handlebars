<div class='text-center'>
  <div
    class='bg-secondary text-white border border-style border-secondary rounded card text-center mb-4'
  >
    <div class='card-body'>
      <p class='card-title'>{{description}}</p>
      <p class='card-subtitle'>Created by
        {{user.name}}
        on
        {{format_date date_created}}</p>
    </div>
  </div>
  <div
    class='bg-secondary text-white border border-style border-secondary rounded card text-center mb-4'
  >
    <h3>Add Comment Here:</h3>
    <form class='form new-comment-form card-body'>
      <div class='form-group'>
        <input value='{{id}}' type='hidden' name='post_id' />

        <label for='comment-desc'>Comment:</label>
        <textarea
          rows='1'
          cols='40'
          class='form-input'
          id='comment-desc'
          name='comment-desc'
        ></textarea>
      </div>
      <button class='btn btn-primary'>Add A Comment</button>
    </form>
  </div>
  <div
    class='bg-secondary text-white border border-style border-secondary rounded card text-center mb-4'
  >
    <h3>Comments:</h3>

    <div class=''>
      {{#each comments as |comment|}}
        <p class='d-flex justify-content-around container-md'>Created on
          {{user.name}}
          {{format_date date_created}}
          : "{{comment.title}}"</p>
      {{/each}}
    </div>
  </div>
</div>

<script src='../js/comments.js'></script>